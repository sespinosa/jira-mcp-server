# Jira MCP Server Configuration
# Copy this file to .env and fill in your actual values

# ========================
# REQUIRED CONFIGURATION
# ========================

# Your Jira instance URL (without protocol, will be auto-upgraded to HTTPS)
JIRA_HOST=your-domain.atlassian.net

# Your Jira account email
JIRA_EMAIL=your-email@example.com

# Your Jira API token (generate from: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-api-token-here

# ========================
# OPTIONAL CONFIGURATION
# ========================

# Authentication Type (default: basic)
# JIRA_AUTH_TYPE=basic

# OAuth2 Configuration (if using OAuth2 instead of API token)
# JIRA_OAUTH2_CLIENT_ID=your-oauth2-client-id
# JIRA_OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
# JIRA_OAUTH2_REDIRECT_URI=http://localhost:3000/callback

# ========================
# RATE LIMITING SETTINGS
# ========================

# Enable rate limiting (default: true)
# JIRA_RATE_LIMITING=true

# Standard operations rate limit (requests per minute, default: 60)
# RATE_LIMIT_STANDARD_RPM=60

# Search operations rate limit (requests per minute, default: 30)
# RATE_LIMIT_SEARCH_RPM=30

# Bulk operations rate limit (requests per minute, default: 20)
# RATE_LIMIT_BULK_RPM=20

# File operations rate limit (requests per minute, default: 10)
# RATE_LIMIT_FILE_RPM=10

# Rate limit burst size (default: 15)
# RATE_LIMIT_BURST_SIZE=15

# ========================
# SECURITY SETTINGS
# ========================

# Maximum file upload size in MB (default: 50)
# MAX_FILE_SIZE_MB=50

# Allowed file extensions for uploads (comma-separated, default: jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,xlsx)
# ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,txt,csv,xlsx

# Allowed upload directories (comma-separated, default: /tmp,/uploads)
# ALLOWED_UPLOAD_DIRS=/tmp,/uploads

# Allowed download directories (comma-separated, default: /downloads,/tmp)
# ALLOWED_DOWNLOAD_DIRS=/downloads,/tmp

# Enable JQL sanitization (default: true)
# ENABLE_JQL_SANITIZATION=true

# Maximum JQL query length (default: 2000)
# MAX_JQL_LENGTH=2000

# Require confirmation for destructive operations (default: true)
# REQUIRE_CONFIRMATION=true

# Confirmation phrase for destructive operations (default: CONFIRM_DELETE)
# CONFIRMATION_PHRASE=CONFIRM_DELETE

# ========================
# AUDIT LOGGING SETTINGS
# ========================

# Enable audit logging (default: true)
# JIRA_AUDIT_LOGGING=true

# Audit log level (HIGH, MEDIUM, LOW, ALL - default: MEDIUM)
# JIRA_AUDIT_LEVEL=MEDIUM

# Audit log file path (default: ./audit.log)
# AUDIT_LOG_FILE_PATH=./audit.log

# Maximum audit log entries in memory (default: 5000)
# AUDIT_LOG_MAX_ENTRIES=5000

# Audit log retention in days (default: 30)
# AUDIT_LOG_RETENTION_DAYS=30

# ========================
# PERFORMANCE SETTINGS
# ========================

# Maximum results per search query (default: 100)
# MAX_SEARCH_RESULTS=100

# Request timeout in milliseconds (default: 30000)
# REQUEST_TIMEOUT_MS=30000

# Enable caching (default: true)
# ENABLE_CACHING=true

# Cache TTL in seconds (default: 300)
# CACHE_TTL_SECONDS=300

# ========================
# DEBUGGING SETTINGS
# ========================

# Enable debug mode (default: false)
# DEBUG=false

# Log level (error, warn, info, debug - default: info)
# LOG_LEVEL=info

# Enable verbose logging (default: false)
# VERBOSE_LOGGING=false
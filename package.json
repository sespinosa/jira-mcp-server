{
  "name": "jira-mcp-server",
  "version": "0.0.1",
  "description": "Jira MCP server for AI assistant integration with comprehensive security features",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "jira-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "test": "echo \"No tests configured\" && exit 0",
    "lint": "eslint src --ext .ts",
    "format": "prettier src/**/*.ts",
    "format:write": "prettier --write src/**/*.ts",
    "prepare": "husky"
  },
  "keywords": [
    "jira",
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "automation",
    "integration"
  ],
  "author": "Sebastian Espinosa <sespinosar@gmail.com>",
  "contributors": [
    "Claude Code Assistant"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^16.0.0",
    "jira.js": "^5.2.1",
    "zod": "^3.25.63"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sespinosa/jira-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/sespinosa/jira-mcp-server/issues"
  },
  "homepage": "https://github.com/sespinosa/jira-mcp-server#readme",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
